    .right-sidebar {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
    }
    .artist__img {
      width: 80%;
      height: 60%;
      aspect-ratio: 1/1.2;
      object-fit: cover;
    }
