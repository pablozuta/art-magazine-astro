    width: 100%;
    height: 100%;
    aspect-ratio: 3/1;
    object-fit: cover;
  }

  .left-sidebar {
    margin-top: 1rem;
  }

  .right-sidebar {
    grid-column: 2/4;
    grid-row: 700px;
    margin-top: 1rem;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
  }

  .right-sidebar-2 {
    grid-column: 2/4;
    grid-row: 800px;
    margin-top: 1rem;
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }

